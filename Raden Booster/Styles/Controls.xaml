    <!--Minimize-->
    <Style x:Key="MinimizeButtonStyle"
           TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid x:Name="LayoutRoot"
                          Background="Transparent"
                          Width="30"
                          Height="{Binding Height}">
                        <materialDesign:PackIcon x:Name="txt"
                                                 Kind="WindowMinimize"
                                                 Foreground="{StaticResource WindowForegroundWhite}"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center" />

                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="LayoutRoot"
                                    Property="Background"
                                    Value="{StaticResource TitleBarButtonMouseOver}" />
                            <Setter TargetName="txt"
                                    Property="Foreground"
                                    Value="{StaticResource TitleBarButtonForegroundMouseOver}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

